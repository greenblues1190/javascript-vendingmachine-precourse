{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    // project requirement
    "max-depth": ["error", 2],
    "max-lines-per-function": [
      "warn",
      { "max": 15, "skipBlankLines": false, "skipComments": false }
    ],
    "no-alert": "off",
    // custom rules
    "import/extensions": ["off"],
    "no-new": "off",
    "newline-before-return": 2,
    "class-methods-use-this": "off",
    "no-console": "error",
    "no-cond-assign": ["error", "except-parens"]
  }
}
